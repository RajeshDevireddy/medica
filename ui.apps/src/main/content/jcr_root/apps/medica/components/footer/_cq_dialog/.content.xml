<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Text"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_text_v2"
    trackingFeature="core-components:text:v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <footerLeft
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Footer Logo"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                           <Logo 
                                               jcr:primaryType="nt:unstructured" 
                                               sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser" 
                                               fieldLabel="Logo"
                                               rootPath="/content/dam/medica"
                                               name="./logo" />
                                            <description 
                                               jcr:primaryType="nt:unstructured" 
                                               sling:resourceType="granite/ui/components/coral/foundation/form/textarea" 
                                               fieldLabel="Description" 
                                               name="./description" />
                                            <linkedIn 
                                               jcr:primaryType="nt:unstructured" 
                                               sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser" 
                                               fieldLabel="LinkedIn link"
                                               rootPath="/content/dam/medica"
                                               name="./linkedIn" />
                                            <instagram 
                                               jcr:primaryType="nt:unstructured" 
                                               sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser" 
                                               fieldLabel="Instagram link"
                                               rootPath="/content/dam/medica"
                                               name="./instagram" />
                                            <twitter 
                                               jcr:primaryType="nt:unstructured" 
                                               sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser" 
                                               fieldLabel="Twitter link"
                                               rootPath="/content/dam/medica"
                                               name="./twitter" />         
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </footerLeft>
                    <footerRight
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Footer Links"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        granite:class="cq-RichText-FixedColumn-column"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                           <footer 
                                                jcr:primaryType="nt:unstructured" 
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield" 
                                                    composite="{Boolean}true" 
                                                    fieldLabel="Footer">
                                                <field 
                                                    jcr:primaryType="nt:unstructured" 
                                                    sling:resourceType="granite/ui/components/coral/foundation/container" 
                                                    name="./footer">
                                                    <items 
                                                        jcr:primaryType="nt:unstructured">
                                                        <column 
                                                        jcr:primaryType="nt:unstructured" 
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items 
                                                        jcr:primaryType="nt:unstructured">
                                                            <section 
                                                                jcr:primaryType="nt:unstructured" 
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
                                                                fieldDescription="Enter section name" 
                                                                fieldLabel="Section Name" 
                                                                name="./sectionName" />
                                                            <footerLinks 
                                                                jcr:primaryType="nt:unstructured" 
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield" 
                                                                composite="{Boolean}true" 
                                                                fieldLabel="Footer Links">
                                                                <field 
                                                                    jcr:primaryType="nt:unstructured" 
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container" 
                                                                    name="./footerLinks">
                                                                    <items 
                                                                        jcr:primaryType="nt:unstructured">
                                                                    <column 
                                                                            jcr:primaryType="nt:unstructured" 
                                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                        <items 
                                                                        jcr:primaryType="nt:unstructured">
                                                                            <linktext 
                                                                                jcr:primaryType="nt:unstructured" 
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
                                                                                fieldDescription="Enter Link text name" 
                                                                                fieldLabel="Link Text"
                                                                                rootPath="/content/medica" 
                                                                                name="./linkText" />
                                                                            <link 
                                                                                jcr:primaryType="nt:unstructured" 
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser" 
                                                                                fieldLabel="Link" 
                                                                                name="./link" />
                                                                        </items>
                                                                    </column>
                                                                    </items>
                                                                </field>
                                                            </footerLinks>
                                                        </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </footer>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </footerRight>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
